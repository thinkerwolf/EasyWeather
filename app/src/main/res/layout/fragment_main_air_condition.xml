<?xml version="1.0" encoding="utf-8"?><!--空气质量模块-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="15dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="15dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/leaf_air" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/air_con_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="bottom"
                android:text="空气质量"
                android:textColor="@color/good_air"
                android:textSize="@dimen/fragment_main_index_small_text" />

            <TextView
                android:id="@+id/air_con_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/good_air"
                android:textSize="17sp" />
        </LinearLayout>


        <ProgressBar
            android:id="@+id/air_con_pm25"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@android:color/transparent"
            android:max="600"
            android:paddingBottom="6.5dp"
            android:paddingTop="6.5dp"
            android:progress="0"
            android:progressDrawable="@drawable/bg_progressbar_good_air" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="PM2.5"
                android:textColor="@color/colorDayWhite"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/air_con_pm25_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="- -"
                android:textColor="@color/colorDayWhite" />
        </FrameLayout>

        <ProgressBar
            android:id="@+id/air_con_pm10"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@android:color/transparent"
            android:max="600"
            android:paddingBottom="6.5dp"
            android:paddingTop="6.5dp"
            android:progress="0"
            android:progressDrawable="@drawable/bg_progressbar_good_air" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="PM10"
                android:textColor="@color/colorDayWhite"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/air_con_pm10_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="- -"
                android:textColor="@color/colorDayWhite" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>